{
  "name": "car-booking",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate",
    "security:check": "./scripts/pre-push-check.sh",
    "security:scan": "./scripts/check-secrets.sh",
    "pre-push": "npm run security:check",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lightningcss": "^1.30.1",
    "lint-staged": "^16.1.5",
    "turbo": "^2.5.5"
  },
  "packageManager": "npm@10.9.2"
}
